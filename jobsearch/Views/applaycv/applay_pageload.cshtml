@model jobsearch.Models.applycls
@{
    ViewBag.Title = "applay_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>apply</h2>

<div>
    @using (@Html.BeginForm("apply_click", "applaycv", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div><label>UPLOAD CV</label></div>
        <div>
            @Html.TextBox("file", "", new { Type = "file" })
        </div>
        <input type="submit" value="APPLY" />
        @Html.DisplayFor(m => m.msg)
    }
</div>